<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="paal"
            type="String" />

        <variable
            name="desc"
            type="String" />

        <variable
            name="iyal"
            type="String" />

        <variable
            name="athikaram"
            type="String" />

        <variable
            name="kural"
            type="String" />

        <variable
            name="image"
            type="android.graphics.drawable.Drawable" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="16dp"
            app:cardBackgroundColor="@color/cardBackgroundColor"
            app:cardCornerRadius="6dp"
            app:cardElevation="3dp"
            android:outlineAmbientShadowColor="@color/primary"
            android:outlineSpotShadowColor="@color/primary"
            app:layout_constraintBottom_toTopOf="@+id/guideline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="UnusedAttribute">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tvPaal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{paal}"
                    android:textColor="@color/homeIconColor"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/guideline3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Arathuppaal" />

                <TextView
                    android:id="@+id/tvPaalDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@{desc}"
                    android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                    android:textSize="10sp"
                    app:layout_constraintBottom_toTopOf="@+id/guideline3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvPaal"
                    tools:text="@string/arathuppaal_desc" />

                <TextView
                    android:id="@+id/tvIyal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/yellow_tv_selector"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:padding="6dp"
                    android:text="@{iyal}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/tvAthikaram"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/guideline3"
                    tools:text="Iyalkal\n4" />

                <TextView
                    android:id="@+id/tvAthikaram"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:background="@drawable/yellow_tv_selector"
                    android:focusable="true"
                    android:clickable="true"
                    android:gravity="center"
                    android:padding="6dp"
                    android:text="@{athikaram}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/tvKurals"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/tvIyal"
                    app:layout_constraintTop_toTopOf="@+id/guideline3"
                    tools:text="Athikarangal\n38" />

                <TextView
                    android:id="@+id/tvKurals"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:background="@drawable/yellow_tv_selector"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:padding="6dp"
                    android:text="@{kural}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/tvAthikaram"
                    app:layout_constraintTop_toTopOf="@+id/guideline3"
                    tools:text="Kuralkal\n380" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_begin="117dp"
                    app:layout_constraintStart_toStartOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@{image}"
            app:backgroundTint="@color/cardBackgroundColor"
            app:layout_constraintBottom_toTopOf="@+id/cardView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/cardView"
            tools:src="@drawable/treasure"
            android:scaleType="center"
            app:maxImageSize="45dp"
            app:fabSize="normal"
            android:contentDescription="@null"
            app:shapeAppearanceOverlay="@style/fab_3_rounded"
            app:tint="@color/primary"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintGuide_begin="225dp"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>